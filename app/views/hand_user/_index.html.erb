<input type="hidden" id="hand_id" value="<%= hand.id %>">
<table class="hand_user_list" id="hand_user_list">
  <tr>
    <th>button</th>
    <th>tern</th>
    <th>ハンドユーザー名</th>
    <th>action</th>
    <th>chip</th>
  </tr>
  <% hand.hand_users.each do | hu | %>
    <tr>
      <th><%= hand.button_user.id == hu.user_id ? "●":"" %></th>
      <th><%= hand.tern_user.id == hu.user_id ? "●":"" %></th>
      <th><%= hu.user.name %></th>
      <th><%= hu.last_action_kbn_str %></th>
      <th><%= hu.last_action_chip %></th>
    </tr>
  <% end %>
</table>
