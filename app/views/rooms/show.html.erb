<h1>Chat room <%= @room.name %> </h1><h2 id="user_name">(<%= @user.name %>)</h2>
<input type="hidden" id="room_id" value="<%= @room.id %>" data-behavior="room_speaker">
<input type="hidden" id="user_id" value="<%= @user.id %>" data-behavior="room_speaker">

<input type="button" id="start_hand_button" value="ハンド開始" >

<div id="room_users">
</div>

<div id="hand_users">
</div>

betting_round:
<div id="betting_round">
</div>
<br>

board:
<div class="card" id="board">
</div>
<br>

round_rules:
<div id="round_rules">
</div>
<br>

round_total_chip:
<div class="round_total_chip_div" id="round_total_chip_div">
  <input disabled title="round_total_chip" type="text" id="round_total_chip" value="" >
</div>

user_hand:
<div class="card" id="user_hand">
</div>

<input type="button" id="call_button" value="call" >
<input title="raise_chip" type="text" id="raise_chip" value="200" >
<input type="button" id="raise_button" value="raise" >
<input type="button" id="fold_button" value="fold" >

<p>メッセージ</p>
<div class="text_messages" id="text_messages">
  <table id="text_message_table">
    <%= render @messages %>
  </table>
</div>

<form>
  <label>Say something:</label><br>
  <input type="text" id="input_message" value="test3" data-behavior="room_speaker">
  <input type="button" id="send_message" value="送信" >
</form>

<%= javascript_include_tag 'channels/room_channel'  %>
<%= javascript_include_tag 'channels/poker_channel' %>
<%= javascript_include_tag 'channels/hand_user_channel'  %>
